<VirtualHost *:80>
    ServerName {{ domain }}
    ServerAlias www.{{ domain }}

    Redirect permanent / https://{{ domain }}/
</VirtualHost>


<VirtualHost *:443>
    ServerName {{ domain }}
    ServerAlias www.{{ domain }}
    SSLEngine On

    DocumentRoot            "/var/www/{{ domain }}"
    <Location />
        DirectoryIndex          index.html
        Options                 -Indexes
    </Location>

    HostnameLookups         Off
</VirtualHost>
