<VirtualHost *:80>
    ServerName www.{{ domain }}

    Redirect permanent / https://{{ domain }}/
</VirtualHost>


<VirtualHost *:443>
    ServerName www.{{ domain }}

    SSLEngine On

    DocumentRoot            "/var/www/{{ domain }}"
    DirectoryIndex          index.html
    Options                 -Indexes

    HostnameLookups         Off

    ErrorDocument           404 /404/index.html
</VirtualHost>
